{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true 
    },
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "build/",
        "coverage/",
        "public/vendor/",
        "public/**/*.min.js",
        "*.min.js",
        "tests/" 
    ],
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "EasyMDE": "readonly"
    },
    "rules": {
        "no-var": "error",
        "prefer-const": "warn",
        "no-unused-vars": "warn",
        "no-console": "off",
        "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
        "no-empty": ["error", { "allowEmptyCatch": true }] 
    }
}