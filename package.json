{
  "name": "peji-kb",
  "version": "1.2.0",
  "description": "Your personal, self-hosted knowledge base.",
  "main": "server.mjs",
  "scripts": {
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --verbose",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint . --ext .js,.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "nodemon server.mjs",
    "start": "node server.mjs"
  },
  "keywords": [
    "knowledge-base",
    "express",
    "self-hosted"
  ],
  "author": "Sacha Pastor",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@google/genai": "^1.33.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "connect-sqlite3": "^0.9.16",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "file-type": "^21.1.1",
    "multer": "^2.0.2",
    "pdfjs-dist": "^5.4.449",
    "phosphor-icons": "^1.4.2"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,mjs}",
      "!src/config/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
}
